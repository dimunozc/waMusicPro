<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MUSICPRO.CL</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/carrito")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <link href="~/Content/styles.css" rel="stylesheet" />
    <link href="~/Content/carrito.css" rel="stylesheet" />
    <script src="~/Scripts/carrito.js"></script>

</head>
<body>
    <!-- navbar2 -->
    <section>
        <div class="nav navbar-static-top" style="background-color: #ffffff">
            <div class="container">
                <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                    <a class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none"><img src="~/Content/images/musicpro.png" alt="LOGO MUSICPRO" height="50px" /></a>

                    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                        <li class="nav-link px-2 link-dark">@Html.ActionLink("INICIO", "Inicio", "Home", new { @class = "text-dark text-decoration-none" })</li>
                        <li class="nav-link px-2 link-dark">@Html.ActionLink("TIENDA", "Products2", "Home", new { @class = "text-dark text-decoration-none" })</li>
                        <li class="nav-link px-2 link-dark">@Html.ActionLink("CONTACTO", "Contact", "Home", new { @class = "text-dark text-decoration-none" })</li>
                        <li class="nav-link px-2 link-dark">@Html.ActionLink("NOSOTROS", "About", "Home", new { @class = "text-dark text-decoration-none" })</li>
                    </ul>

                    <div class="col-md-3 text-end">
                        <button type="button" class="btn-mostrar-carrito" id="btn-mostrar-carrito"><i class="btn-mostrar-carrito fa-solid fa-cart-shopping"></i></button>
                        @Html.ActionLink("LOG IN", "LoginIndex", "Login", null, new { @class = "btn btn-outline-dark me-2" })
                        @Html.ActionLink("REGISTRARSE", "Registro", "Login", null, new { @class = "btn btn-outline-dark me-2" })
                    </div>
                </header>
            </div>
        </div>
    </section>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/carrito")
    @RenderSection("scripts", required: false)
</body>
</html>
